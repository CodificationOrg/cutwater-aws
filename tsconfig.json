    "outDir": "lib",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2017", "dom"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
